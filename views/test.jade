extends layout

block content
    .container
        .container
            .row
                .col
                    h2 This is the contact page
                    p This will contain info about how to contact me
    .container
        form(method='post', action='/invoice/send')
            
            .form-group
                label Name
                input.form-control(type='text', name='name', placeholder='Enter Name')
            .form-group
                label Email
                input.form-control(type='text', name='email', placeholder='Enter email')
            .form-group
                label Message
                textarea.form-control(name='message', placeholder='Enter your Message')
            button.btn.btn-success(type='submit') Submit